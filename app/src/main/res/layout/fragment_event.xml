<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ProEvent_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/ProEvent_white">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@color/ProEvent_orange_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eventBar"
            app:layout_constraintWidth_max="360dp">

            <LinearLayout
                android:id="@+id/scrollChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <ImageView
                    android:id="@+id/eventImageView"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:contentDescription="@string/event_image"
                    android:src="@drawable/ic_event_image_placeholder" />

                <TextView
                    android:id="@+id/editEventImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/edit_event_image"
                    android:textAlignment="center"
                    android:textColor="@color/ProEvent_blue_600"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/nameInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:maxWidth="320dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameInputTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/event_name_input_title"
                        android:textColor="@color/ProEvent_bright_orange_500"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameInput"
                        style="@style/ProEventRWTextInputLayoutStyle"
                        android:clickable="true"
                        android:focusable="true"
                        app:endIconMode="none">

                        <ru.myproevent.ui.views.KeyboardAwareTextInputEditText
                            android:id="@+id/nameEdit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/event_name_input_hint"
                            android:inputType="textPersonName"
                            android:maxLength="320"
                            android:textColorHint="@color/ProEvent_blue_600"
                            android:textIsSelectable="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:maxWidth="320dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/locationInputTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/location_input_title"
                        android:textColor="@color/ProEvent_bright_orange_500"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/locationInput"
                        style="@style/ProEventRWTextInputLayoutStyle"
                        android:clickable="true"
                        android:focusable="true"
                        app:endIconMode="none">

                        <ru.myproevent.ui.views.KeyboardAwareTextInputEditText
                            android:id="@+id/locationEdit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/location_input_hint"
                            android:inputType="textPersonName"
                            android:maxLength="320"
                            android:textColorHint="@color/ProEvent_blue_600"
                            android:textIsSelectable="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/datesBar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/ProEvent_blue_300"
                        android:gravity="center"
                        android:text="@string/event_dates"
                        android:textColor="@color/ProEvent_blue_800"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/datesBarHitArea"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="@id/datesBar"
                        app:layout_constraintLeft_toLeftOf="@id/datesBar"
                        app:layout_constraintRight_toRightOf="@id/datesBar"
                        app:layout_constraintTop_toTopOf="@id/datesBar" />

                    <ImageView
                        android:id="@+id/addDate"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_add_date"
                        android:scaleType="center"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="@id/datesBar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/datesBar" />

                    <ImageView
                        android:id="@+id/expandDates"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_expand_dates"
                        android:scaleType="center"
                        android:src="@drawable/ic_expand"
                        app:layout_constraintBottom_toBottomOf="@id/datesBar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/datesBar"
                        app:tint="@color/ProEvent_blue_800" />

                    <LinearLayout
                        android:id="@+id/datesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/datesBar">

                        <TextView
                            android:id="@+id/noDates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="60dp"
                            android:backgroundTint="@color/ProEvent_blue_600"
                            android:gravity="center"
                            android:paddingTop="30dp"
                            android:paddingBottom="10dp"
                            android:text="@string/event_no_dates"
                            android:textColor="@color/ProEvent_blue_800"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/descriptionBar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/ProEvent_blue_300"
                        android:gravity="center"
                        android:text="@string/event_description"
                        android:textColor="@color/ProEvent_blue_800"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/datesContainer" />

                    <View
                        android:id="@+id/descriptionBarHitArea"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="@id/descriptionBar"
                        app:layout_constraintLeft_toLeftOf="@id/descriptionBar"
                        app:layout_constraintRight_toRightOf="@id/descriptionBar"
                        app:layout_constraintTop_toTopOf="@id/descriptionBar" />

                    <ImageView
                        android:id="@+id/editDescription"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_edit_description"
                        android:scaleType="center"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintBottom_toBottomOf="@id/descriptionBar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/descriptionBar"
                        app:tint="@color/ProEvent_blue_800" />

                    <ImageView
                        android:id="@+id/expandDescription"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_expand_description"
                        android:scaleType="center"
                        android:src="@drawable/ic_expand"
                        app:layout_constraintBottom_toBottomOf="@id/descriptionBar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/descriptionBar"
                        app:tint="@color/ProEvent_blue_800" />

                    <FrameLayout
                        android:id="@+id/descriptionContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descriptionBar">

                        <ru.myproevent.ui.views.KeyboardAwareTextInputEditText
                            android:id="@+id/descriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/ProEvent_white"
                            android:textColor="@color/ProEvent_blue_800"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/noDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="60dp"
                            android:backgroundTint="@color/ProEvent_blue_600"
                            android:gravity="center"
                            android:paddingTop="30dp"
                            android:paddingBottom="10dp"
                            android:text="@string/event_no_description"
                            android:textColor="@color/ProEvent_blue_800"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/mapsBar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/ProEvent_blue_300"
                        android:gravity="center"
                        android:text="@string/event_map"
                        android:textColor="@color/ProEvent_blue_800"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descriptionContainer" />

                    <View
                        android:id="@+id/mapBarHitArea"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="@id/mapsBar"
                        app:layout_constraintLeft_toLeftOf="@id/mapsBar"
                        app:layout_constraintRight_toRightOf="@id/mapsBar"
                        app:layout_constraintTop_toTopOf="@id/mapsBar" />

                    <ImageView
                        android:id="@+id/addMap"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/add_map"
                        android:scaleType="center"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="@id/mapsBar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mapsBar" />

                    <ImageView
                        android:id="@+id/expandMaps"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_expand_maps"
                        android:scaleType="center"
                        android:src="@drawable/ic_expand"
                        app:layout_constraintBottom_toBottomOf="@id/mapsBar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/mapsBar"
                        app:tint="@color/ProEvent_blue_800" />

                    <LinearLayout
                        android:id="@+id/mapsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mapsBar">

                        <TextView
                            android:id="@+id/noMaps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="60dp"
                            android:backgroundTint="@color/ProEvent_blue_600"
                            android:gravity="center"
                            android:paddingTop="30dp"
                            android:paddingBottom="10dp"
                            android:text="@string/event_no_maps"
                            android:textColor="@color/ProEvent_blue_800"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pointsBar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/ProEvent_blue_300"
                        android:gravity="center"
                        android:text="@string/event_points"
                        android:textColor="@color/ProEvent_blue_800"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mapsContainer" />

                    <View
                        android:id="@+id/pointsBarHitArea"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="@id/pointsBar"
                        app:layout_constraintLeft_toLeftOf="@id/pointsBar"
                        app:layout_constraintRight_toRightOf="@id/pointsBar"
                        app:layout_constraintTop_toTopOf="@id/pointsBar" />

                    <ImageView
                        android:id="@+id/addPoint"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_points"
                        android:scaleType="center"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="@id/pointsBar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/pointsBar" />

                    <ImageView
                        android:id="@+id/expandPoints"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_expand_points"
                        android:scaleType="center"
                        android:src="@drawable/ic_expand"
                        app:layout_constraintBottom_toBottomOf="@id/pointsBar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/pointsBar"
                        app:tint="@color/ProEvent_blue_800" />

                    <LinearLayout
                        android:id="@+id/pointsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pointsBar">

                        <TextView
                            android:id="@+id/noPoints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="60dp"
                            android:backgroundTint="@color/ProEvent_blue_600"
                            android:gravity="center"
                            android:paddingTop="30dp"
                            android:paddingBottom="10dp"
                            android:text="@string/event_no_points"
                            android:textColor="@color/ProEvent_blue_800"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/participantsBar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/ProEvent_blue_300"
                        android:gravity="center"
                        android:text="@string/event_participants"
                        android:textColor="@color/ProEvent_blue_800"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pointsContainer" />

                    <View
                        android:id="@+id/participantsBarHitArea"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="@id/participantsBar"
                        app:layout_constraintLeft_toLeftOf="@id/participantsBar"
                        app:layout_constraintRight_toRightOf="@id/participantsBar"
                        app:layout_constraintTop_toTopOf="@id/participantsBar" />

                    <ImageView
                        android:id="@+id/addParticipant"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_add_participants"
                        android:scaleType="center"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="@id/participantsBar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/participantsBar" />

                    <ImageView
                        android:id="@+id/expandParticipants"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="7dp"
                        android:contentDescription="@string/event_expand_participants"
                        android:scaleType="center"
                        android:src="@drawable/ic_expand"
                        app:layout_constraintBottom_toBottomOf="@id/participantsBar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/participantsBar"
                        app:tint="@color/ProEvent_blue_800" />

                    <LinearLayout
                        android:id="@+id/participantsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/participantsBar">

                        <TextView
                            android:id="@+id/noParticipants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="60dp"
                            android:backgroundTint="@color/ProEvent_blue_600"
                            android:gravity="center"
                            android:paddingTop="30dp"
                            android:paddingBottom="10dp"
                            android:text="@string/event_no_participants"
                            android:textColor="@color/ProEvent_blue_800"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/absoluteBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/ProEvent_blue_300"
            android:gravity="center"
            android:text="@string/event_description"
            android:textColor="@color/ProEvent_blue_800"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eventBar" />

        <View
            android:id="@+id/absoluteBarHitArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/absoluteBar"
            app:layout_constraintLeft_toLeftOf="@id/absoluteBar"
            app:layout_constraintRight_toRightOf="@id/absoluteBar"
            app:layout_constraintTop_toTopOf="@id/absoluteBar" />

        <ImageView
            android:id="@+id/absoluteBarEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:contentDescription="@string/progress_bar"
            android:scaleType="center"
            android:src="@drawable/ic_add"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/absoluteBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/absoluteBar" />

        <ImageView
            android:id="@+id/absoluteBarExpand"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:contentDescription="@string/progress_bar"
            android:scaleType="center"
            android:src="@drawable/ic_expand"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/absoluteBar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/absoluteBar"
            app:tint="@color/ProEvent_bright_orange_300" />

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ProEvent_blue_800_opacity_20"
            android:visibility="gone" />

        <include
            android:id="@+id/eventBar"
            layout="@layout/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="360dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
