<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ProEvent_white"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/background_rounded"
        android:elevation="5dp"
        android:gravity="center"
        android:minHeight="48dp"
        android:textColor="@color/ProEvent_blue_800"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Штуки, которых много" />

    <ImageView
        android:id="@+id/edit_items"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="7dp"
        android:elevation="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        app:layout_constraintLeft_toLeftOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/bar" />

    <ImageView
        android:id="@+id/expand"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_expand"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        app:layout_constraintRight_toRightOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:tint="@color/ProEvent_blue_800" />

</androidx.constraintlayout.widget.ConstraintLayout>